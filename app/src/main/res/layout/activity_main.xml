<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samsung.exe1aula6.MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button1"
        android:layout_marginEnd="43dp"
        android:background="@android:color/background_light"
        android:drawableTop="@drawable/volume"
        android:text="Volume" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/button5"
        android:layout_marginBottom="11dp"
        android:background="@android:color/background_light"
        android:drawableTop="@drawable/peso"
        android:text="Peso" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/button1"
        android:layout_marginTop="31dp"
        android:background="@android:color/background_light"
        android:drawableTop="@drawable/area"
        android:text="Area" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp"
        android:background="@android:color/background_light"
        android:drawableTop="@drawable/comprimento"
        android:text="Comprimento" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/button4"
        android:layout_marginTop="32dp"
        android:background="@android:color/background_light"
        android:drawableTop="@drawable/temperatura"
        android:text="Temperatura" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button5"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:drawableTop="@drawable/tempo"
        android:text="Tempo" />

</RelativeLayout>
